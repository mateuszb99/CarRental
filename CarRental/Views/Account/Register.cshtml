@model CarRental.Models.Uzytkownik
<!doctype html>
<html lang="en">
@{
    ViewData["Title"] = "Utwórz konto";
    var returnUrl = ViewData["ReturnUrl"] as string;
    var error = TempData["Error"] as string;
}
<head>
    <title>Zaloguj</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/css/Account.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-7 col-lg-5">
                    <div class="wrap">
                        <div class="login-wrap p-4 p-md-5">
                            <div class="d-flex">
                                <div class="w-100">
                                    <h3 class="mb-4">Zarejestruj się</h3>
                                </div>
                                <div class="w-100">
                                    <p class="social-media d-flex justify-content-end">
                                        <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
                                        <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a>
                                    </p>
                                </div>
                            </div>
                            <form method="post" asp-controller="Account" asp-action="Register" class="signin-form">
                                <div class="form-group mt-3">
                                    <input type="text" class="form-control" asp-for="Nazwa_uzytkownika" required />
                                    <label class="form-control-placeholder" for="username">Nazwa użytkownika</label>
                                    <span asp-validation-for="Nazwa_uzytkownika" class="text-danger"></span>
                                </div>
                                <div class="form-group mt-3">
                                    <input type="text" class="form-control" asp-for="Email" required />
                                    <label class="form-control-placeholder">Adres email</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" asp-for="Hasło" required />
                                    <label class="form-control-placeholder" for="password">Hasło</label>
                                    <span asp-validation-for="Hasło" class="text-danger"></span>
                                    @*<span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>*@
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" asp-for="Potwierdz_Haslo" required />
                                    <label class="form-control-placeholder" for="password">Potwierdź Hasło</label>
                                    <span asp-validation-for="Potwierdz_Haslo" class="text-danger"></span>
                                    @*<span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>*@
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="form-control btn btn-primary rounded submit px-3">Utwórz konto</button>
                                </div>
                            </form>
                            <p class="text-center">Masz już konto? <a asp-area="" asp-controller="Account" asp-action="Login">Zaloguj się!</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="js/jquery.min.js"></script>
    <script src="js/popper.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>

</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</html>

