@model CarRental.Models.Uzytkownik
@{
    ViewData["Title"] = "Mój profil";
}
<style>
    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-clip: border-box;
        border: 0 solid transparent;
        border-radius: .25rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 2px 6px 0 rgb(218 218 253 / 65%), 0 2px 6px 0 rgb(206 206 238 / 54%);
    }

    .me-2 {
        margin-right: .5rem !important;
    }
</style>

<div>
    <div class="container">
        <div class="main-body">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body" style="background:#f7f7ff">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="https://bootdey.com/img/Content/avatar/avatar6.png" class="rounded-circle p-1 bg-prim@ary" width="110">
                                <div class="mt-3">
                                    @if (User.IsInRole("A"))
                                    {
                                        <p class="text-secondary mb-1"><b>Admin</b></p> }
                                    else
                                    {
                                        <p class="text-secondary mb-1"><b>Użytkownik</b></p>
                                        <p class="text-secondary mb-1">@Model.Imie @Model.Nazwisko</p>
                                        }
                                </div>
                            </div>
                            <hr class="my-4">
                            <ul class="list-group list-group-flush">
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-body" style="background:#f7f7ff">
                            <div class="d-flex align-items-center row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Nazwa użytkownika:</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input class="form-control" type="text" value="@Model.Nazwa_uzytkownika" disabled />
                                </div>
                            </div>
                            @if (!(User.IsInRole("A")))
                            {
                                <div class="d-flex align-items-center row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Imię:</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input class="form-control" placeholder="Brak Danych" type="text" value="@Model.Imie" disabled />
                                    </div>
                                </div>
                                <div class="d-flex align-items-center row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">@Html.DisplayNameFor(model => model.Nazwisko):</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input class="form-control" placeholder="Brak Danych" type="text" value="@Model.Nazwisko" disabled />
                                    </div>
                                </div>
                                <div class="d-flex align-items-center row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">@Html.DisplayNameFor(model => model.Numer_telefonu):</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input class="form-control" placeholder="Brak Danych" type="text" value="@Model.Numer_telefonu" disabled />
                                    </div>
                                </div>
                                <div class="d-flex align-items-center row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">@Html.DisplayNameFor(model => model.Email):</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input class="form-control" placeholder="Brak Danych" type="text" value="@Model.Email" disabled />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3"></div>
                                    <div class="col-sm-9 text-secondary">
                                        <a class="btn btn-primary px-4" type="button" asp-controller="Account" asp-action="EditUser">Edytuj dane</a>
                                        <a class="btn btn-danger px-2" type="button" asp-controller="Account" asp-action="EditUserPassword">Zmień Hasło</a>
                                    </div>
                                </div> }
                            else
                            {
                                <div class="row">
                                    <div class="col-sm-3"></div>
                                    <div class="col-sm-9 text-secondary">
                                        <a class="btn btn-danger px-2" type="button" asp-controller="Account" asp-action="EditUserPassword">Zmień Hasło</a>
                                    </div>
                                </div>}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
