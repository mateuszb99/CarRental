@model CarRental.Models.Uzytkownik
@{
    ViewData["Title"] = "Edytuj dane";
    var error = TempData["Error"] as string;
}
<style>
    .return {
        text-align: center;
        padding: 20px 0 0;
    }
</style>
<body>
    @if (!string.IsNullOrEmpty(error))
    {
        <h2 class="alert-danger" style="padding:15px;">@error</h2>;
    }

    <div class="global-container">
            <div class="card-body col-md-4" style="margin:auto">
                <h3 class="card-title text-center">Zmień dane konta @Model.Nazwa_uzytkownika</h3>
                <div class="card-text">
                    <form method="post" asp-controller="Account" asp-action="UpdateData">
                        <div class="form-group text-center">
                            <label asp-for="Nazwa_uzytkownika" class="control-label">Nazwa Użytkownika</label>
                            <input asp-for="Nazwa_uzytkownika" class="form-control" value="@Model.Nazwa_uzytkownika" />
                            <span asp-validation-for="Nazwa_uzytkownika" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <label asp-for="Imie" class="control-label">Imię</label>
                            <input asp-for="Imie" class="form-control" value="@Model.Imie" />
                            <span asp-validation-for="Imie" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <label asp-for="Nazwisko" class="control-label">Nazwisko    </label>
                            <input asp-for="Nazwisko" class="form-control" value="@Model.Nazwisko" />
                            <span asp-validation-for="Nazwisko" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <label asp-for="Numer_telefonu" class="control-label">Numer telefonu</label>
                            <input asp-for="Numer_telefonu" class="form-control" value="@Model.Numer_telefonu" />
                            <span asp-validation-for="Numer_telefonu" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <label asp-for="Email" class="control-label">Numer telefonu</label>
                            <input asp-for="Email" class="form-control" value="@Model.Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block" value="save" onclick="return confirm('Czy na pewno chcesz zapisać nowe dane?')">Zapisz zmiany</button>

                        <div class="return">
                            <a asp-area="" asp-controller="Account" asp-action="Account"> Cofnij </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
</body>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}