@model CarRental.Models.Uzytkownik
@{
    ViewData["Title"] = "Zmień hasło";
    var error = TempData["Error"] as string;
}
<style>
    .return {
        text-align: center;
        padding: 20px 0 0;
    }
</style>
<body>
    @if (!string.IsNullOrEmpty(error))
    {
        <h2 class="alert-danger" style="padding:15px;">@error</h2>;
    }

    <div class="global-container">
        <div class="card-body col-md-4" style="margin:auto">
            <h3 class="card-title text-center">Zmień hasło do konta @Model.Nazwa_uzytkownika</h3>
            <div class="card-text">
                <form method="post" asp-controller="Account" asp-action="EditUserPassword">
                    <input asp-for="Nazwa_uzytkownika" class="form-control" value="@Model.Nazwa_uzytkownika" hidden />
                    <span asp-validation-for="Nazwa_uzytkownika" class="text-danger"></span>
                    <div class="form-group text-center">
                        <label asp-for="Hasło" class="control-label">Nowe hasło</label>
                        <input asp-for="Hasło" class="form-control" />
                        <span asp-validation-for="Hasło" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <label asp-for="Potwierdz_Haslo" class="control-label">Potwierdź nowe hasło</label>
                        <input asp-for="Potwierdz_Haslo" class="form-control" />
                        <span asp-validation-for="Potwierdz_Haslo" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block" value="save" onclick="return confirm('Czy na pewno chcesz zmienić hasło?')">Zapisz zmiany</button>

                    <div class="return">
                        <a asp-area="" asp-controller="Account" asp-action="Account"> Cofnij </a>
                    </div>
                </form>
            </div>
        </div>
        </div>
</body>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}